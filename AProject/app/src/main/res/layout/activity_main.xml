<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/startMainOfB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="24dp"
        android:layout_margin="24dp"
        android:textSize="21sp"
        android:gravity="center"
        android:text="start main activity of B project"/>

    <TextView
        android:id="@+id/startSubOfB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="24dp"
        android:layout_margin="24dp"
        android:textSize="21sp"
        android:gravity="center"
        android:text="start sub activity of B project"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <TextView
        android:id="@+id/startMainOfBWithText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="24dp"
        android:textSize="21sp"
        android:gravity="center"
        android:text="start main activity of B project with this text"/>

</LinearLayout>